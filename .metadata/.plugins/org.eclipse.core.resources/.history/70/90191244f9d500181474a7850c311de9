package application;

import java.util.ArrayList;
import java.util.List;
import java.util.stream.Collectors;

import model.entities.Product;
import model.services.ProductService;

public class Program {

	public static void main(String[] args) {

		List<Product> list = new ArrayList<>();

		list.add(new Product("Tv", 900.00));
		list.add(new Product("Mouse", 50.00));
		list.add(new Product("Tablet", 350.50));
		list.add(new Product("HD Case", 80.90));

		/*  .stream() -conversão de lista para stream
		 *  .map - uma função que aplica uma função a todos elementos de uma stream
		 *  .collect(Collectors.toList()) - conversão de Stream para Lista
		 */
		
		//função Function: recebe um objecto do tipo T e retorna um do tipo R
		List<String> names = list.stream().map(new ProductService()).collect(Collectors.toList());

		names .forEach(System.out::println);
	}
}